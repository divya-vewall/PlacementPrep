class Solution
{ 
    public static int findSum(int A[],int N) 
    {
       int max = A[0];
       int min = A[0];
       int sum =0;
       for(int i=0 ;i<A.length; i++){
           if(min>A[i])
             min = A[i];
           if(max<A[i])
             max = A[i];
       }
       return  min+max;
      
    }
}
